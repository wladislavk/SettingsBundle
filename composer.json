{
    "name": "vkr/settings-bundle",
    "type": "symfony-bundle",
    "description": "A bundle for Symfony2/3 that simplifies retrieving settings from config files and Doctrine entities",
    "keywords": ["settings", "configuration", "symfony2", "symfony3"],
    "homepage": "https://github.com/wladislavk/SettingsBundle",
    "license": "MIT",
    "authors": [
        {"name": "Vladislav Kryshtanovskiy", "email": "wladislav.k@gmail.com"}
    ],
    "require": {
        "php": ">=5.6",
        "symfony/symfony": "~2.8|~3.0",
        "doctrine/orm": ">=2.2.3",
        "doctrine/doctrine-bundle": "~1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },
    "autoload": {
        "psr-4": {
            "VKR\\SettingsBundle\\": ""
        }
    }
}
